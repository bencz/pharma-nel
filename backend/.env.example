# ===========================================
# Pharma NER/NEL API - Environment Variables
# ===========================================

# Application
APP_NAME=Pharma NER/NEL API
APP_VERSION=0.1.0
ENV=development
DEBUG=true
LOG_LEVEL=INFO
LOG_JSON=false

# Server
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database - ArangoDB
# ===========================================
ARANGO_HOST=http://localhost:8529
ARANGO_DATABASE=pharma_ner
ARANGO_USER=root
ARANGO_PASSWORD=pharma123

# ===========================================
# External APIs
# ===========================================

# FDA API (optional - increases rate limits)
FDA_API_KEY=
FDA_BASE_URL=https://api.fda.gov
FDA_TIMEOUT=30
FDA_MAX_RETRIES=3

# RxNorm API
RXNORM_BASE_URL=https://rxnav.nlm.nih.gov/REST
RXNORM_TIMEOUT=30
RXNORM_MAX_RETRIES=3

# UNII API
UNII_BASE_URL=https://api.fda.gov/other/substance.json
UNII_TIMEOUT=30
UNII_MAX_RETRIES=3

# OpenAI (for NER)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TIMEOUT=60

# ===========================================
# HTTP Client Settings
# ===========================================
HTTP_VERIFY_SSL=true

# ===========================================
# CORS Settings
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
